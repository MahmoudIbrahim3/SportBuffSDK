<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SenderNameStyle">
        <item name="android:fontFamily">@font/gibson_semi_bd</item>
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:textColor">@color/sender_name_color</item>
        <item name="android:horizontalSpacing">-8dp</item>
        <item name="android:lineSpacingExtra">16dp</item>
    </style>

    <style name="QuestionTextStyle">
        <item name="android:fontFamily">@font/gibson_semi_bd</item>
        <item name="android:textSize">@dimen/font_17</item>
        <item name="android:textColor">@color/question_text_color</item>
        <item name="android:horizontalSpacing">20dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="AnswerTextStyle">
        <item name="android:fontFamily">@font/gibson_semi_bd</item>
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:textColor">@color/answer_text_color</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:lineSpacingExtra">14dp</item>
    </style>

    <style name="CountDownTimerTextStyle">
        <item name="android:fontFamily">@font/gibson_semi_bd</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/count_down_text_color</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:lineSpacingExtra">17dp</item>
    </style>
</resources>